<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp">

    <ImageView
        android:id="@+id/detail_poster_movie"
        android:layout_width="387dp"
        android:layout_height="161dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/cupcake"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintTop_creator="1"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/detail_name_of_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintBottom_toTopOf="@+id/detail_type_movie"
        android:layout_marginBottom="24dp"
        android:padding="15dp" />

    <TextView
        android:id="@+id/detail_type_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_poster_movie"
        app:layout_constraintHorizontal_bias="0.05"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/detail_year"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/detail_name_of_movie"
        android:padding="15dp" />

    <TextView
        android:id="@+id/detail_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_poster_movie"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toLeftOf="@+id/detail_type_movie"
        android:padding="15dp" />

        <TextView
            android:id="@+id/detalhes_sinopse"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_marginTop="256dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_poster_movie"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />



    <android.support.design.widget.FloatingActionButton
        android:src="@android:drawable/btn_star_big_off"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_button"
        app:layout_constraintLeft_toLeftOf="@+id/detail_poster_movie"
        app:layout_constraintRight_toRightOf="@+id/detail_poster_movie"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/detail_poster_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.22000003" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />
</android.support.constraint.ConstraintLayout>